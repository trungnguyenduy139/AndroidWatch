<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14dp"
    android:descendantFocusability="blocksDescendants"
    android:background="#e9d9d9">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm Time"
        android:textSize="30sp"
        android:id="@+id/tvAlarmTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm Content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tvAlarmTime"
        android:id="@+id/tvAlarmConent" />

    <TableRow
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_marginTop="77dp">
    </TableRow>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btDel"
        android:src="@android:drawable/ic_menu_delete"
        android:layout_alignRight="@+id/hr"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/hr" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btEdit"
        android:src="@android:drawable/ic_menu_edit"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btDel"
        android:layout_toStartOf="@+id/btDel" />
</RelativeLayout>